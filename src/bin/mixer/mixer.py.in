import os
import threading
import isc.log
from isc.log_messages.init_messages import *

isc.log.init("b10-init", buffer=True)
logger = isc.log.Logger("init")
isc.log.log_config_update('{"loggers": [{"additive": false, "severity": "DEBUG", "debuglevel": 99, "name": "*", "output_options": [{"output": "file.log", "destination": "file", "flush": false, "maxsize": 0, "maxver": 0}]}]}', '{"commands": [], "config_data": [], "statistics": [], "module_name": "Mixer", "module_description": "May mix log messages"}')

# First, fork few processes (8 should be enough)

os.fork();
os.fork();
os.fork();

# Then launch few threads in each process

def body():
    for i in range(0, 10000):
        logger.fatal(BIND10_COMPONENT_START_EXCEPTION, "Hello", 42)

threads = []
for i in range(0, 8):
    t = threading.Thread(target=body)
    t.start()
    threads.append(t)

for t in threads:
    t.join()
